package com.creativeprograms;

import java.util.Scanner;

public class PatternProgram {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int r1 = sc.nextInt();
		int r2 = sc.nextInt();
		int r3 = sc.nextInt();
		
		for (int i = 1; i <= r1; i++) {
			for (int b = 1; b <= r1 - i; b++) {
				System.out.print(" ");
			}
			for (int j = 1; j <= i; j++) {
				System.out.print(i + " ");
			}
			System.out.println();
		}
		
		for (int i = 1; i <= r2; i++) {
			for (int b = 1; b <= r2 - i; b++) {
				System.out.print(" ");
			}
			for (int j = 1; j <= i; j++) {
				System.out.print(i + " ");
			}
			System.out.println();
		}
		
		for (int i = 1; i <= r3; i++) {
			for (int b = 1; b <= r3 - i; b++) {
				System.out.print(" ");
			}
			for (int j = 1; j <= i; j++) {
				System.out.print(i + " ");
			}
			System.out.println();
		}
	}

}
