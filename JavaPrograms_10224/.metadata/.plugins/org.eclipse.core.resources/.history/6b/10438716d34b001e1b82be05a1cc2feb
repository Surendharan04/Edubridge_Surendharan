package com.edu;

@FunctionalInterface
interface Message{
	void display();

}
@FunctionalInterface
interface Addition{
	void add(int a, int b);
}

public class FunctionalInterfaceMain2{

	public static void main(String[] args) {
		   //no argument and no return type
		//Lambda expression can be applied only for functional interface
		//which has single abstract method
		Message mob=()->{
			System.out.println("Display method called");
		};
		
		mob.display();
		
		Message mob1=()->System.out.println("Display method");
		mob1.display();
		
		//with argument and no return type
		Addition aob=( i,j)->{
			int s=i+j;
			System.out.println("sum="+s);
		};
		aob.add(9, 3);
		Addition aob1=(i, j)->System.out.println("sum="+(i+j));
		aob1.add(19, 3);
	}

}